\newtheorem{proposition}{Proposition}[section]
\newtheorem{corollary}{Corollary}[section]

\theoremstyle{remark}
\newtheorem{remark}{Remark}[section]
\newtheorem{note}{Note}[section]

% Custom environments
\newenvironment{infobox}[1][infraradar@light]
{%
    \begin{center}
        \begin{minipage}{0.9\textwidth}
            \colorbox{#1}{\parbox{\textwidth}{%
                \vspace{0.5cm}
            }}
        \end{minipage}
    \end{center}
}

\newenvironment{callout}[1][infraradar@accent]
{%
    \begin{center}
        \begin{minipage}{0.9\textwidth}
            \colorbox{#1}{\parbox{\textwidth}{%
                \vspace{0.3cm}
                \textbf{\color{white} #1}
                \vspace{0.3cm}
            }}
        \end{minipage}
    \end{center}
}

